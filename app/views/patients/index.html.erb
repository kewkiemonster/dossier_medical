<p id="notice"><%= notice %></p>

<% if @user.blank? %>
  <h2> There is no such member <%= params[:search] %>.</h2>
<% end %>

<h1>Patients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthdate</th>
      <th>Contact</th>
      <th>Address</th>
      <th>Injury</th>
      <th>Infection</th>
      <th>Special Observation</th>
      <th>Appointment</th>
      <th>Time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.birthdate %></td>
        <td><%= patient.contact %></td>
        <td><%= patient.address %></td>
        <td><%= patient.injury %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.specialobservation %></td>
        <td><%= patient.appointment %></td>
        <td><%= patient.time %></td>
        <td><%= patient.user %></td>
        <td><%= link_to 'Show', show_path %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path %>
